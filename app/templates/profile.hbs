<div class="container">


		<div class="offset-by-one two columns profile-user-image">
			{{#if model.image}}
				<img src="{{model.image}}">
			{{else}}
				<img src="http://lorempixel.com/200/200/people">
			{{/if}}
		</div>
		<div class="five columns">
			{{#if model}}
				<h4>{{model.name}} {{model.lastname}}</h4>
				<p>{{model.email}}</p>
			{{else}}
				<h4>Ooops!</h4>
				<p>Couldn't load profile - are you logged in?</p>
				<p class="warning">We're sorry - this shouldn't have happened!</p>
			{{/if}}
		</div>

</div>