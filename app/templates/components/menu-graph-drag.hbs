<menu class="side-menu right four columns">

	{{yield}}

	<label for="dashboard-name">Dashboard name:</label>
	{{input class="u-width-full" id="dashboard-name" value=model.name}}
	<label for="dashboard-description">Description:</label>
	{{input class="u-width-full" id="dashboard-description" value=model.text}}

	{{#each model.display as |display|}}
		{{#draggable-object content=this}}
			{{input type="checkbox" name=display.name id=display.key checked=value click=(action "changeDashboardSelection")}}
			<label for={{display.key}}>{{display.key}}</label>
		{{/draggable-object}}
	{{else}}
		No pulse graphs selected.
		Select one in the {{#link-to 'dashboard.board.edit' model.id}}Edit menu{{/link-to}}.
	{{/each}}

