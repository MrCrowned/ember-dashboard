<div class="row">
	<div class="eleven columns">
		<h3>{{model.name}}</h3>
		<p>{{model.text}}</p>
	</div>

	<div class="one columns edit-button">
	{{#link-to 'dashboard.board.edit' model.id class="btn utility hide-on-phones"}}{{fa-icon "fa-pencil"}}Edit{{/link-to}}
	</div>
</div>

{{outlet}}

<section class="dashboard-display">

	{{#each-in model.displays as |index value|}}

		<b>Name: {{value.name}}</b> --
		Status: {{value.status}}
		<br>

	{{else}}
		No graphs selected.
	{{/each-in}}

</section>